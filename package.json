{
  "name": "Foodie",
  "private": true,
  "description": "Тестовый проект верстки на HTML5 + CSS3",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "^10.0.0",
    "browser-sync": "^2.0.0",
    "del": "^6.0.0",
    "gulp": "^4.0.0",
    "gulp-csso": "^4.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-terser": "^2.0.1",
    "gulp-webp": "^4.0.1",
    "postcss": "^8.3.11",
    "postcss-csso": "^5.0.1",
    "sass": "^1.43.4",
    "stylelint": "^13.12.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "14.15.0"
  },
  "dependencies": {
    "svgo": "^2.8.0"
